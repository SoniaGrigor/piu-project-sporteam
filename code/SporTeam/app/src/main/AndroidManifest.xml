<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sporteam">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_sporteam"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_sporteam"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Splash screen -->
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Main activity -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity> <!-- Login activity -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity> <!-- Register activity -->
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity> <!-- ResetPassword activity -->
        <activity
            android:name=".ResetPasswordActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".EventsActivity"
            android:label="SporTeam"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".LocationBookingActivity"
            android:exported="true"
            android:label="SporTeam"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".LocationDetailsActivity"
            android:exported="true"
            android:label="SporTeam"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".LocationForRentActivity"
            android:exported="true"
            android:label="SporTeam"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>