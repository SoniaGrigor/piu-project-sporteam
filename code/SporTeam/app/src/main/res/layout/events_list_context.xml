<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="134dp"
        android:layout_height="139dp"
        android:scaleType="fitXY"
        android:src="@drawable/football" />

    <TextView
        android:id="@+id/event_title"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/event_image"
        android:layout_marginStart="144dp"
        android:textColor="@android:color/black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/event_date"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/event_title"
        android:layout_alignBottom="@+id/event_title"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="-19dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/event_date"
        android:layout_alignBottom="@+id/event_date"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="-26dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/event_time"
        android:layout_alignBottom="@+id/event_time"
        android:layout_marginStart="-4dp"
        android:layout_marginBottom="-24dp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/event_button"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/event_image"
        android:layout_alignRight="@+id/event_image"
        android:layout_alignBottom="@+id/event_title"
        android:layout_marginStart="255dp"
        android:layout_marginRight="-255dp"
        android:layout_marginBottom="-41dp"
        android:textColor="@android:color/holo_blue_dark" />


</RelativeLayout>